
{
  "id": null,
  "title": "Nginx Logs - yourdomain.com",
  "tags": ["nginx", "logs", "loki"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 6,
  "refresh": "5s",
  "panels": [
    {
      "type": "logs",
      "title": "Access Logs (All)",
      "datasource": { "type": "loki", "uid": "loki-datasource" },
      "targets": [
        { "expr": "{job=\"yourdomain.com\", type=\"access\"}", "refId": "A" }
      ],
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 0 },
      "options": { "showLabels": true, "showTime": true, "wrapLogMessage": true }
    },
    {
      "type": "logs",
      "title": "Error Logs (All)",
      "datasource": { "type": "loki", "uid": "loki-datasource" },
      "targets": [
        { "expr": "{job=\"yourdomain.com\", type=\"error\"}", "refId": "A" }
      ],
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 10 },
      "options": { "showLabels": true, "showTime": true, "wrapLogMessage": true }
    },
    {
      "type": "logs",
      "title": "4xx Error Logs",
      "datasource": { "type": "loki", "uid": "loki-datasource" },
      "targets": [
        { "expr": "{job=\"yourdomain.com\", type=\"access\"} |~ \" 4[0-9]{2} \"", "refId": "A" }
      ],
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 20 },
      "options": { "showLabels": true, "showTime": true, "wrapLogMessage": true }
    },
    {
      "type": "logs",
      "title": "5xx Error Logs",
      "datasource": { "type": "loki", "uid": "loki-datasource" },
      "targets": [
        { "expr": "{job=\"yourdomain.com\", type=\"access\"} |~ \" 5[0-9]{2} \"", "refId": "A" }
      ],
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 20 },
      "options": { "showLabels": true, "showTime": true, "wrapLogMessage": true }
    },
    {
      "type": "stat",
      "title": "4xx Errors (last 5m)",
      "datasource": { "type": "loki", "uid": "loki-datasource" },
      "targets": [
        { "expr": "count_over_time({job=\"yourdomain.com\", type=\"access\"} |~ \" 4[0-9]{2} \" [5m])", "refId": "A" }
      ],
      "gridPos": { "h": 4, "w": 12, "x": 0, "y": 30 }
    },
    {
      "type": "stat",
      "title": "5xx Errors (last 5m)",
      "datasource": { "type": "loki", "uid": "loki-datasource" },
      "targets": [
        { "expr": "count_over_time({job=\"yourdomain.com\", type=\"access\"} |~ \" 5[0-9]{2} \" [5m])", "refId": "A" }
      ],
      "gridPos": { "h": 4, "w": 12, "x": 12, "y": 30 }
    },
    {
      "type": "timeseries",
      "title": "4xx vs 5xx Errors Over Time",
      "datasource": { "type": "loki", "uid": "loki-datasource" },
      "targets": [
        { "expr": "count_over_time({job=\"yourdomain.com\", type=\"access\"} |~ \" 4[0-9]{2} \" [1m])", "refId": "A", "legendFormat": "4xx Errors" },
        { "expr": "count_over_time({job=\"yourdomain.com\", type=\"access\"} |~ \" 5[0-9]{2} \" [1m])", "refId": "B", "legendFormat": "5xx Errors" }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 34 },
      "options": { "legend": { "displayMode": "table", "placement": "right" } }
    }
  ]
}

